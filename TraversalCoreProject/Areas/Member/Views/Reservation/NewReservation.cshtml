@model Reservation
@{
    ViewData["Title"] = "NewReservation";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<h1>Yeni Rezervasyon Sayfası</h1>
<form method="post" id="reservationForm">
    <div class="form-group">
        @Html.Label("Lokasyon")
        @Html.DropDownListFor(x => x.Destination, (List<SelectListItem>)ViewBag.v, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.Label("Kişi Sayısı")
        <input type="text" asp-for="PersonCount" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tarih")
        <input type="date" asp-for="ReservationDate" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Varsa Eklemek İstedikleriniz")
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <button type="button" class="btn btn-outline-success" id="submitReservation">Rezervasyon Yap</button>

</form>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById("submitReservation").addEventListener("click", function (e) {
        Swal.fire({
            title: 'Rezervasyon Alındı!',
            text: 'Rezervasyonunuz başarıyla oluşturuldu. Onay için lütfen bekleyiniz.',
            icon: 'success',
            showConfirmButton: false,
            timer: 1500,
            timerProgressBar: true,
            didClose: () => {
                document.getElementById("reservationForm").submit();
            }
        });
    });
</script>
