@model Destination
@{
    ViewData["Title"] = "UpdateDestination";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rota Güncelleme Sayfası</h1>

<form method="post" id="reservationForm">
    <input type="hidden" asp-for="DesctinationId"/>
    <div class="form-group mt-2">
        @Html.Label("Şehir")
        <input type="text" asp-for="City" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Gün Gece")
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Ana Görsel")
        <input type="text" asp-for="Image" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Kapak Görseli")
        <input type="text" asp-for="CoverImage" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Görsel 2")
        <input type="text" asp-for="Image2" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Detay 1")
        <textarea cols="60" rows="5" asp-for="Details1" class="form-control"></textarea>
    </div>
    <div class="form-group mt-2">
        @Html.Label("Detay 2")
        <textarea cols="60" rows="5" asp-for="Details2" class="form-control"></textarea>
    </div>
    <button type="button" class="btn btn-outline-primary mt-4" id="submitReservation">Güncelle</button>

</form>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById("submitReservation").addEventListener("click", function (e) {
        Swal.fire({
            title: 'Harika !',
            text: 'Tur Rotası Başarıyla Güncelleştirildi!',
            icon: 'success',
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true,
            didClose: () => {
                document.getElementById("reservationForm").submit();
            }
        });
    });
</script>
