@model List<Guide>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int count = 0;
}
<style>
    img{
        border-radius:50%;
    }
</style>
<h1>Rehber Listesi</h1>
<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Görsel</th>
        <th>Ad Soyad</th>
        <th>Açıklama</th>
        <th>Durum</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <td>@count</td>
            <td><img style="height:60px;width:55px;" src="@item.Image" /></td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>
                @{
                    if (item.Status == true)
                    {
                    <td><a class="btn btn-outline-warning">Pasif Yap</a></td>
                    }
                    else
                    {
                    <td><a class="btn btn-outline-success">Aktif Yap</a></td>
                    }
                }
            </td>
            <td><a href="#" class="btn btn-outline-success">Düzenle</a></td>
        </tr>
    }
</table>
<a href="~/Admin/Guide/AddGuide/" class="btn btn-outline-primary" href="#">Yeni Rehber Girişi</a>