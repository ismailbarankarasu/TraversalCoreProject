@model Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Rehber Oluşturma Sayfası</h1>

<form method="post" id="reservationForm">
    <div class="form-group mt-2">
        @Html.Label("Ad Soyad")
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        @Html.Label("X")
        <input type="text" asp-for="TwitterUrl" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Instagram")
        <input type="text" asp-for="InstagramUrl" class="form-control" />
    </div>
    <div class="form-group mt-2">
        @Html.Label("Rehber Fotoğraf")
        <input type="text" asp-for="Image" class="form-control" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        @Html.Label("Açıklama")
        <textarea cols="60" rows="5" asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <button type="button" class="btn btn-outline-primary mt-4" id="submitReservation">Oluştur</button>

</form>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.getElementById("submitReservation").addEventListener("click", function (e) {
        Swal.fire({
            title: 'Harika !',
            text: 'Yeni Rehber Başarıyla Oluşturuldu !',
            icon: 'success',
            showConfirmButton: false,
            timer: 2000,
            timerProgressBar: true,
            didClose: () => {
                document.getElementById("reservationForm").submit();
            }
        });
    });
</script>

