
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Traversal Misafir Kayıt Ekranı</title>
	<meta name="viewport" content="width=device-width, initial-scale=1.0">

	<!-- LINEARICONS -->
	<link rel="stylesheet" href="~/login_register/colorlib-regform-26/fonts/linearicons/style.css">

	<!-- STYLE CSS -->
	<link rel="stylesheet" href="~/login_register/colorlib-regform-26/css/style.css">
</head>

<body>

	<div class="wrapper">
		<div class="inner">
			<img src="~/login_register/colorlib-regform-26/images/image-1.png" alt="" class="image-1">
			<form method="post">
				<h3>Yeni Hesap Oluşturun?</h3>
				<div class="form-holder">
					<span class="lnr lnr-user"></span>
					<input type="text" class="form-control" placeholder="Adınız" name="Name">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-map"></span>
					<input type="text" class="form-control" placeholder="Soyadınız" name="Surname">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input type="text" class="form-control" placeholder="Mail Adresiniz" name="Mail">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-phone-handset"></span>
					<input type="text" class="form-control" placeholder="Kullanıcı Adınız" name="Username">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-envelope"></span>
					<input type="password" class="form-control" placeholder="Şifreniz" name="Password">
				</div>
				<div class="form-holder">
					<span class="lnr lnr-keyboard"></span>
					<input type="password" class="form-control" placeholder="Şifre Tekrar" name="ConfirmPassword">
				</div>
				<button>
					<span>Kayıt Ol</span>
				</button>
			@* 	<a class="btn btn-warning" href="~/Login/SignIn/"><span>Giriş Yap</span></a> *@

			</form>
			<img src="~/login_register/colorlib-regform-26/images/image-2.png" alt="" class="image-2">
		</div>

	</div>

	<script src="~/login_register/colorlib-regform-26/js/jquery-3.3.1.min.js"></script>
	<script src="~/login_register/colorlib-regform-26/js/main.js"></script>
</body><!-- This templates was made by Colorlib (https://colorlib.com) -->
</html>